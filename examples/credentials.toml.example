# Grid Credentials Configuration
# Copy this to ~/.config/grid/credentials.toml and fill in your API keys.
# These credentials are shared across all Grid tools and agents.

[anthropic]
api_key = "sk-ant-your-key-here"

[openai]
api_key = "sk-your-key-here"

# Uncomment and fill in as needed:

# [google]
# api_key = "your-google-api-key"

# [mistral]
# api_key = "your-mistral-api-key"

# [groq]
# api_key = "your-groq-api-key"

# --- Web Search (pick one) ---

# Brave Search API (free tier: 2000 queries/month)
# Get key at: https://api.search.brave.com/
# [brave]
# api_key = "BSA..."

# Tavily Search API (AI-optimized, $5/1000 queries)  
