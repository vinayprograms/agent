# 12 - Test Writer
# Generate tests for existing code

NAME test-writer
INPUT source_file
INPUT test_framework DEFAULT "auto-detect"
INPUT coverage DEFAULT "comprehensive"

GOAL analyze "Read $source_file. Identify public functions and key edge cases."
GOAL plan "Plan $coverage tests: 1-2 tests per function covering happy path + one edge case."
GOAL generate "Write test file using $test_framework. Keep tests focused and minimal."
GOAL write_test "Write test file next to source."

RUN create USING analyze, plan, generate, write_test
