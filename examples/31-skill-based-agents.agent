NAME skill-based-agents

# Example demonstrating skill-based agent definitions
# AGENT FROM resolves to skill directories automatically
# Note: Requires skills.paths configured in agent.json

INPUT code_path
INPUT language DEFAULT "go"

# From skill directories within the package
AGENT reviewer FROM skills/code-review
AGENT tester FROM skills/testing
AGENT git-helper FROM skills/git-workflow

GOAL analyze "Analyze code at $code_path for $language patterns" USING reviewer
GOAL suggest-tests "Suggest tests for the analyzed code" USING tester
GOAL prepare-commit "Prepare a commit for the changes" USING git-helper

RUN main USING analyze, suggest-tests, prepare-commit
